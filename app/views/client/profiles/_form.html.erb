<div class="columns">
  <div class="column is-10 is-offset-1 is-centered">
    <%= form_for [:client, @profile ]  do |f| %>
      <% if @profile.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @profile.errors.full_messages.each do |message| %>
            <li class="is-danger" style="color:red"><%= message %></li>
          <% end %>
          </ul>
        </div><br>
      <% end %>
      <h2 class="subtitle is-5">Localização</h2>
      <div class="columns"> 
        <div class="column is-3">
          <div class="control">
            <label>CEP</label>
            <%= f.text_field :zipcode, :required => true, id: 'cep',  class: 'input' %>
          </div>
        </div>
        <div class="column is-3">
          <div class="control">
            <label>Estado</label>
            <%= f.text_field :state, :required => true, id: "state", class: 'input' %>
          </div>
        </div>
        <div class="column is-3">
          <div class="control">
            <label>Cidade</label>
            <%= f.text_field :city, :required => true, id: "city", class: 'input' %>
          </div>
        </div>
      </div>
      <div class="columns"> 
        <div class="column is-3">
          <div class="control">
            <label>Bairro</label>
            <%= f.text_field :neighborhood, :required => true, id: "neighborhood", class: 'input' %>
          </div>
        </div>
        <div class="column is-3">
          <div class="control">
            <label>Rua</label>
            <%= f.text_field :street, :required => true, id: "street", class: 'input' %>
          </div>
        </div>
        <div class="column is-3">
          <div class="control">
            <label>Número</label>
            <%= f.text_field :street_number,:required => true, class: 'input' %>
          </div>
        </div>
      </div>
      <h2 class="subtitle is-6">Seus Dados Bancários</h2>
        <div class="columns">
          <div class="field column is-6">
            <div class="control">
              <label>Nome Completo</label><br>
              <%= f.text_field :legal_name, class: 'input' %>
            </div>
          </div>
          <div class="field column is-3">
            <div class="control">
              <label>CPF</label><br>
              <%= f.text_field :document_number, class: 'input' %>
            </div>
          </div>
            <div class="field column is-2">
            <div class="control">
              <label>Código do Banco</label><br>
              <%= f.text_field :bank_code, class: 'input' %>
            </div>
          </div>
        </div>
        <div class="columns">
          <div class="field column is-3">
            <div class="control">
              <label>Número da Agência</label><br>
              <%= f.text_field :agency, class: 'input' %>
            </div>
          </div>
          <div class="field column is-3">
            <div class="control">
              <label>Identificador da agência</label><br>
              <%= f.text_field :agency_dv, class: 'input' %>
            </div>
          </div>
          <div class="field column is-3">
            <div class="control">
              <label>Número da Conta</label><br>
              <%= f.text_field :account, class: 'input' %>
            </div>
          </div>
          <div class="field column is-2">
            <div class="control">
              <label>Identificador da conta</label><br>
              <%= f.text_field :account_dv, class: 'input' %>
                <%= f.hidden_field :account_type, value: 'cpf' %>
            </div>
          </div>
        </div>
      <div class="columns">
      <div class="field is-grouped">
        <div class="control">
          <%= f.submit "Salvar", class: 'button is-outlined is-fullwidth is-uppercase' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
